<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.only.rxtest.MainActivity">
    <TextView
        android:id="@+id/tv_rx"
        android:text="RxJava请求"
        android:gravity="center"
        android:layout_marginTop="80dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/color_white_ffffff"
        android:background="@color/color_blue_028be6"
        android:layout_width="80dp"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/tv_async"
        android:text="异步任务请求"
        android:gravity="center"
        android:textColor="@color/color_white_ffffff"
        android:background="@color/color_blue_028be6"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="80dp"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/tv_retrofit"
        android:text="retrofit测试"
        android:gravity="center"
        android:textColor="@color/color_white_ffffff"
        android:background="@color/color_blue_028be6"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="80dp"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/tv_http"
        android:text="OkHttp测试"
        android:gravity="center"
        android:textColor="@color/color_white_ffffff"
        android:background="@color/color_blue_028be6"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="80dp"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/tv_rx_second"
        android:text="Rx Second 测试"
        android:gravity="center"
        android:textColor="@color/color_white_ffffff"
        android:background="@color/color_blue_028be6"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="80dp"
        android:layout_height="40dp" />

</LinearLayout>
